<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<context:component-scan base-package="ru.geekbrains.samples" />

	<bean id="duke"
		  class="ru.geekbrains.samples.dao.Juggler">
		<constructor-arg value="15" />
	</bean>

<!--Или можно использовать следующую строку кода, если использовать конструктор по умолчанию-->
<!--	<bean id="duke" class="ru.geekbrains.samples.dao.Juggler" />-->

	<bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
	    <property name="prefix" value="/WEB-INF/views/" />
	    <property name="suffix" value=".jsp" />
	</bean>

</beans>


